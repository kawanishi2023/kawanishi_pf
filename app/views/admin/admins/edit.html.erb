<div class="container">
  <div class="row justify-content-center mt-3">
    <h3 class="border-bottom border-gray">
     <%= @user.name%>さんの会員情報編集
    </h3>
  </div>
  
  <%= form_with model: @user, url: admin_path(@user.id) do |f| %>
    <div class="row mt-2">
      <div class="mx-auto">
        <table>
          <tr>
            <td>会員ID</td>
            <td style="padding-bottom: 10px;"><%= @user.id %></td>
            <td style="padding-bottom: 10px;"></td>
          </tr>
          <tr>
            <td>ユーザー名</td>
            <td style="padding-bottom: 10px;"><%= f.text_field :name %></td>
          </tr>
          <tr>
            <td style="padding-bottom: 10px;">メールアドレス</td>
            <td style="padding-bottom: 10px;"><%= f.text_field :email %></td>
            <td style="padding-bottom: 10px;"></td>
          </tr>
          <tr>
            <td style="padding-bottom: 10px; padding-right: 40px;">会員ステータス</td>
            <td style="padding-bottom: 10px;">
              <%= f.radio_button :is_deleted, false, checked:false %>
              有効ユーザー
              <%= f.radio_button :is_deleted, true %>
              退会ユーザー
            </td>
            <td style="padding-bottom: 10px;"></td>
          </tr>
        </table>
      </div>
    </div>
    
    <div class="row justify-content-center mb-3">
      <%= f.submit '変更を保存',class: 'btn btn-success' %>
    </div>
  <% end %>
</div>