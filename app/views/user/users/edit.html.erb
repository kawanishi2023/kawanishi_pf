
<!--会員ページ　会員編集-->

<div class="row my-3">
  <div class="col-4"></div>
  <div class="col-4">
    <h3 class="css_font title ">ユーザー情報編集</h3>
    <div class="css_font user_edit pt-2">
      <%= form_with model: @user do |f| %>
      <div class="my-1">
        <%= f.label :ユーザー名 %><br>
        <%= f.text_field :name %><br>
      </div>
      <div class="my-1">
        <%= f.label :メールアドレス %><br>
        <%= f.text_field :email %><br>
      </div>
      <div class="mt-3"><%= f.submit '変更' %></div>
      <% end %>
    </div>
  </div>
  <div class="col-4"></div>
</div>